# =============================================================================
# MCP SQL PaaS Universal - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# GENERAL MCP SERVER SETTINGS
# -----------------------------------------------------------------------------
MCP_SERVER_NAME=mcp-sql-universal
MCP_LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR
MCP_LOG_FILE=/var/log/mcp/server.log
MCP_CONSOLE_LOGGING=true
MCP_TIMEOUT_SECONDS=120               # Total tool call timeout
MCP_CONNECTION_POOL_SIZE=10           # Connection pool size (5-20 recommended)

# -----------------------------------------------------------------------------
# SQL SERVER / AZURE SQL CONFIGURATION
# -----------------------------------------------------------------------------
# Mode: "database" (single DB) or "server" (multi-database)
SQLSERVER_MODE=database

# Connection settings
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=your_database
SQLSERVER_USER=mcp_readonly_user
SQLSERVER_PASSWORD=your_secure_password

# Security settings (recommended: all true for production)
SQLSERVER_ENCRYPT=true
SQLSERVER_TRUST_SERVER_CERTIFICATE=false
SQLSERVER_USE_READ_REPLICA=true

# Azure SQL specific
AZURE_SQL_USE_ENTRA_ID=true           # Use Microsoft Entra ID auth
AZURE_SQL_TENANT_ID=your_tenant_id
AZURE_SQL_CLIENT_ID=your_client_id
AZURE_SQL_CLIENT_SECRET=your_client_secret

# -----------------------------------------------------------------------------
# SNOWFLAKE CONFIGURATION
# -----------------------------------------------------------------------------
SNOWFLAKE_ACCOUNT_URL=https://your-org-your-account.snowflakecomputing.com
SNOWFLAKE_USER=mcp_service_user
SNOWFLAKE_PASSWORD=your_secure_password
SNOWFLAKE_WAREHOUSE=MCP_WAREHOUSE
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=MCP_DEMO_ROLE

# Authentication method: "password", "oauth", "pat"
SNOWFLAKE_AUTH_METHOD=pat
SNOWFLAKE_PAT=your_personal_access_token

# OAuth settings (if using oauth)
SNOWFLAKE_OAUTH_CLIENT_ID=your_oauth_client_id
SNOWFLAKE_OAUTH_CLIENT_SECRET=your_oauth_client_secret
SNOWFLAKE_OAUTH_REDIRECT_URI=http://localhost:8080/callback

# Network policy
SNOWFLAKE_ALLOWED_IPS=10.0.0.0/24,192.168.1.0/24

# -----------------------------------------------------------------------------
# SAP HANA CONFIGURATION
# -----------------------------------------------------------------------------
# Connection type: "single", "mdc_system", "mdc_tenant"
HANA_CONNECTION_TYPE=single

# Required for all types
HANA_HOST=your_hana_host
HANA_USER=mcp_readonly_user
HANA_PASSWORD=your_secure_password

# Required for MDC types
HANA_PORT=30015
HANA_INSTANCE_NUMBER=00

# Required for MDC Tenant
HANA_DATABASE_NAME=your_tenant_db

# Optional settings
HANA_SCHEMA=your_schema
HANA_SSL_ENABLED=true
HANA_SSL_VALIDATE_CERT=true
HANA_ENCRYPT=true

# -----------------------------------------------------------------------------
# POSTGRESQL CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database
POSTGRES_USER=mcp_readonly_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SCHEMA=public

# SSL settings
POSTGRES_SSLMODE=require              # disable, require, verify-ca, verify-full
POSTGRES_SSLCERT=/path/to/client-cert.pem
POSTGRES_SSLKEY=/path/to/client-key.pem
POSTGRES_SSLROOTCERT=/path/to/ca-cert.pem

# Azure PostgreSQL specific
AZURE_POSTGRES_USE_ENTRA_ID=true

# -----------------------------------------------------------------------------
# MYSQL CONFIGURATION
# -----------------------------------------------------------------------------
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database
MYSQL_USER=mcp_readonly_user
MYSQL_PASSWORD=your_secure_password

# SSL settings
MYSQL_SSL_MODE=REQUIRED
MYSQL_SSL_CA=/path/to/ca-cert.pem

# -----------------------------------------------------------------------------
# ORACLE DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=your_service
ORACLE_USER=mcp_readonly_user
ORACLE_PASSWORD=your_secure_password

# Connection method: "basic", "wallet"
ORACLE_CONNECTION_METHOD=basic
ORACLE_WALLET_LOCATION=/path/to/wallet

# -----------------------------------------------------------------------------
# ERP-SPECIFIC CONFIGURATIONS
# -----------------------------------------------------------------------------

# SAP S/4HANA
SAP_S4HANA_SYSTEM_ID=S4H
SAP_S4HANA_CLIENT=100
SAP_S4HANA_USE_ODATA=true
SAP_S4HANA_ODATA_URL=https://your-s4hana.com/sap/opu/odata/sap/

# Microsoft Dynamics 365
DYNAMICS365_ENVIRONMENT_URL=https://your-org.crm.dynamics.com
DYNAMICS365_TENANT_ID=your_tenant_id
DYNAMICS365_CLIENT_ID=your_client_id
DYNAMICS365_CLIENT_SECRET=your_client_secret
DYNAMICS365_USE_DATAVERSE=true

# Oracle ERP Cloud
ORACLE_ERP_URL=https://your-cloud.oraclecloud.com
ORACLE_ERP_USERNAME=your_username
ORACLE_ERP_PASSWORD=your_password

# NetSuite
NETSUITE_ACCOUNT_ID=your_account_id
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret

# Workday
WORKDAY_TENANT=your_tenant
WORKDAY_USERNAME=your_username
WORKDAY_PASSWORD=your_password
WORKDAY_API_VERSION=v38.0

# -----------------------------------------------------------------------------
# CACHING CONFIGURATION
# -----------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_TYPE=memory                     # memory, redis, database
CACHE_TTL_SECONDS=300

# Redis settings (if using redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# -----------------------------------------------------------------------------
# MONITORING AND HEALTH CHECK
# -----------------------------------------------------------------------------
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60
METRICS_ENABLED=true
METRICS_PORT=9090
